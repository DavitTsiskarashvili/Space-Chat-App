<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/itemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_14_dp"
    android:layout_marginEnd="@dimen/dimen_16_dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/smallBubbleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_2_dp"
        android:layout_marginEnd="@dimen/dimen_2_dp"
        android:layout_marginBottom="@dimen/dimen_4_dp"
        android:background="@drawable/ic_send_small_bubble"
        app:layout_constraintTop_toBottomOf="@+id/bubbleImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bubbleImageView"
        android:layout_width="@dimen/dimen_15_dp"
        android:layout_height="@dimen/dimen_15_dp"
        android:layout_marginTop="@dimen/dimen_23_dp"
        android:background="@drawable/ic_send_big_bubble"
        app:layout_constraintEnd_toStartOf="@id/smallBubbleImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messageTextView"
        style="@style/normalMyriadGeo_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4_dp"
        android:layout_marginEnd="@dimen/dimen_18_dp"
        android:background="@drawable/tv_radius_sent"
        android:paddingHorizontal="@dimen/dimen_18_dp"
        android:paddingVertical="@dimen/dimen_7_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="გამარჯობა ზეზვა" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateTextView"
        style="@style/smallMyriadGeo_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4_dp"
        android:layout_marginEnd="@dimen/dimen_25_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/smallBubbleImageView"
        app:layout_constraintTop_toBottomOf="@id/messageTextView"
        tools:text="მარ 14, 16:05" />


</androidx.constraintlayout.widget.ConstraintLayout>