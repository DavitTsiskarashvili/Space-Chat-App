<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/itemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_14_dp" >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/smallBubbleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginEnd="@dimen/dimen_2_dp"
        android:layout_marginBottom="@dimen/dimen_4_dp"
        android:background="@drawable/ic_send_small_bubble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bubbleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_send_big_bubble"
        app:layout_constraintBottom_toTopOf="@id/smallBubbleImageView"
        app:layout_constraintStart_toEndOf="@id/smallBubbleImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/messageTextView"
        style="@style/normalMyriadGeo_Regular"
        android:layout_width="0dp"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_1_dp"
        android:layout_marginTop="@dimen/dimen_4_dp"
        android:background="@drawable/tv_radius_sent"
        android:paddingTop="@dimen/dimen_18_dp"
        android:paddingBottom="@dimen/dimen_18_dp"
        android:paddingStart="@dimen/dimen_18_dp"
        android:paddingEnd="@dimen/dimen_18_dp"
        app:layout_constraintStart_toStartOf="@id/bubbleImageView"
        app:layout_constraintBottom_toBottomOf="@id/bubbleImageView"
        tools:text="გამარჯობა ზეზვა" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateTextView"
        style="@style/smallMyriadGeo_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginTop="@dimen/dimen_4_dp"
        android:layout_marginEnd="@dimen/dimen_25_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/smallBubbleImageView"
        app:layout_constraintTop_toBottomOf="@id/messageTextView"
        tools:text="მარ 14, 16:05" />

</androidx.constraintlayout.widget.ConstraintLayout>