<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.topFragment.TopFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/tilMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/layout_top_item" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMessage"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_35dp"
        app:boxCornerRadiusBottomEnd="@dimen/dimen_28dp"
        app:boxCornerRadiusBottomStart="@dimen/dimen_28dp"
        app:boxCornerRadiusTopEnd="@dimen/dimen_28dp"
        app:boxCornerRadiusTopStart="@dimen/dimen_28dp"
        app:boxStrokeWidth="@dimen/dimen_1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/normalMyriadGeo_Regular"
            android:maxLines="5"
            android:scrollbars="vertical" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingEnd="@dimen/dimen_14dp"
        android:src="@drawable/ic_send_button"
        app:layout_constraintBottom_toBottomOf="@+id/tilMessage"
        app:layout_constraintEnd_toEndOf="@+id/tilMessage"
        app:layout_constraintTop_toTopOf="@+id/tilMessage" />


</androidx.constraintlayout.widget.ConstraintLayout>