<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_14dp"
    android:layout_marginEnd="@dimen/dimen_110dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSmallBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_2dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:background="@drawable/ic_received_small_bubble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBubble"
        android:layout_width="@dimen/dimen_15dp"
        android:layout_height="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_23dp"
        android:background="@drawable/ic_received_big_bubble"
        app:layout_constraintStart_toEndOf="@id/ivSmallBubble"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:background="@drawable/tv_radius_received"
        android:fontFamily="@font/myriad_geo"
        android:paddingHorizontal="@dimen/dimen_18dp"
        android:paddingVertical="@dimen/dimen_7dp"
        android:text="გამარჯობა ზეზვა"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:fontFamily="@font/myriad_geo"
        android:text="მარ 14, 16:05"
        android:textColor="@color/date_color"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMessage" />


</androidx.constraintlayout.widget.ConstraintLayout>